--  Test driver that produces a Prettier Document from Ada source code and that
--  prints it reformatted.

with "gnatfmt_common";
with "libadalang";

project Gendoc is
   for Source_Dirs use ("../src/gendoc");
   for Object_Dir use "../obj/gendoc";
   for Main use ("gendoc.adb");

   package Compiler renames Gnatfmt_Common.Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;
end Gendoc;
